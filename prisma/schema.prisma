generator client {
  provider = "prisma-client"
  output   = "../app/generated"
}

datasource db {
  provider = "postgresql"
}

model Comentario {
  id      String   @id @default(uuid())
  nombre  String
  mensaje String
  fecha   DateTime @default(now())
}
